{
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk-xe",
      "command": "latexmk",
      "args": [
        "-xelatex",
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
